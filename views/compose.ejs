<%- include("header") -%>

<div class="container mt-5">
  <form action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input type="text" name="postTitle" class="form-control" placeholder="Enter Title">
    </div>
    <div class="form-group">
      <label>Content</label>
      <textarea class="form-control" name="postBody" id="" cols="30" rows="10" placeholder="Content"></textarea>
    </div>

    <button type="submit" class="btn btn-outline-dark post-button">Post</button>
  </form>
</div>

<%- include("footer") -%>